{
  "name": "movies-api",
  "version": "2.0.0",
  "description": "API REST of movies with Node.js, Express and MongoDB - Practice purpose",
  "main": "index.js",
  "scripts": {
    "add-build": "git add dist",
    "build": "rimraf dist && tsc",
    "clean": "rimraf dist",
    "dev": "DEBUG=app:* nodemon ./src/index.ts",
    "lint": "ts-standard",
    "seed:genres": "node -r dist/scripts/mongo/seedGenres.js",
    "seed:movies": "node -r dist/scripts/mongo/seedMovies.js",
    "start": "nodemon src/index.ts",
    "ts.check": "tsc --project tsconfig.json"
  },
  "keywords": [
    "api",
    "express"
  ],
  "author": "Diego Osorio <Diegoalesco95@hotmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.6.0",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/hapi__joi": "^17.1.12",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.9",
    "@types/passport": "^1.0.14",
    "@types/passport-http": "^0.3.10",
    "@types/passport-jwt": "^3.0.12",
    "@types/proxyquire": "^1.3.30",
    "@types/sinon": "^10.0.20",
    "@types/supertest": "^2.0.15",
    "chalk": "^4.1.2",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.5",
    "sinon": "^15.1.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "nyc": {
    "all": true,
    "include": [
      "routes",
      "services",
      "lib",
      "utils"
    ]
  }
}
